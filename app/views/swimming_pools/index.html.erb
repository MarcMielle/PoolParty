<div class="container">

  <h1>Swimming Pools</h1>
  <div class="d-flex">

    <div class="">
      <% @swimming_pools.each do |swimming_pool| %>
          <div class="d-flex mb-2 border">
          <!--   <div> -->
              <%= cl_image_tag swimming_pool.photo.key, crop: :fill, class: "object-fit-cover" %>
            <!-- </div> -->
            <div class="pool-body">
              <%= link_to "#{swimming_pool.name}", swimming_pool_path(swimming_pool), class: "pool-name" %>
              <div class="pool-owner"><%= swimming_pool.user.first_name %></div>
              <div class="pool-address"><%= swimming_pool.location %></div>
              <%= link_to "Details", swimming_pool_path(swimming_pool), class: "btn btn-flat-blue" %>
            </div>
          </div>
      <% end %>
    </div>
<!--     <div class="col-sm-6"> -->
    <div id="map"
          style="width: 100%; height: 600px; position: sticky; top: 0; flex: 1 0 50%;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
    <!-- </div> -->
  </div>

</div>
