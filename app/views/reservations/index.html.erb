<div class="container">
   <h1><%= "#{current_user.first_name.capitalize}" %>, your current bookings</h1>
    <div class="content-trip">
      <div class="btn-resa">
   <%= link_to 'Find a new pool', swimming_pools_path, class: "btn btn-flat-blue" %>
      </div>
      <div class="content-trip-resa">
  <% @reservations.each do |reservation| %>

    <div class="card-trip">
      <%= cl_image_tag reservation.swimming_pool.photo.key, crop: :fill %>
      <div class="card-trip-infos">
        <div>
            <h2><%#= reservation.user.first_name.capitalize %> <%#= reservation.user.last_name.capitalize %></h2>
            <div class="card-details-price">
              <h2><strong><%= reservation.swimming_pool.name %></strong></h2>
              <h2>Starting: <%= reservation.starting_date %></h2>
              <h2>Ending: <%= reservation.ending_date %></h2>
              <h2>Status:
                <% if reservation.status == "Accepted" %>
                  <div class="status-accepted">
                    <%= reservation.status.capitalize %>
                  </div>
                <% elsif reservation.status == "Pending" %>
                    <div class="status-pending">
                    <%= reservation.status.capitalize %>
                  </div>
                <% else reservation.status == "Declined" %>
                  <div class="status-declined">
                    <%= reservation.status.capitalize %>
                  </div>
                <% end %>
              </h2>
            </div>
        </div>
        <h2 class="card-trip-pricing">â‚¬<%= reservation.total_price %></h2>
        <%= cl_image_tag reservation.user.avatar.key, crop: :fill, class: "card-trip-user avatar-bordered" %>

      </div>
    </div>

<% end %>
</div>
</div>

</div>
