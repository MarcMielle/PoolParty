<div class="container">
 <h1><%= "#{current_user.first_name.capitalize}" %>, your swimming pools bookings</h1>
    <div class="content-trip">
        <% @reservations.each do |reservation| %>
        <div class="card-trip">
            <%= cl_image_tag reservation.swimming_pool.photo.key, crop: :fill %>
            <div class="card-trip-infos">
                <div>
                     <h2><%= reservation.user.first_name.capitalize %> <%= reservation.user.last_name.capitalize %></h2>
                         <p><strong><%= reservation.swimming_pool.name %></strong></p>
                         <p>Starting: <strong><%= reservation.starting_date %></strong></p>
                         <p>Ending: <strong><%= reservation.ending_date %></strong></p>
                         <p>Status: <strong><%= reservation.status.capitalize %></strong></p>
                    <% if reservation.status == "pending" %>
                    <%= link_to "Accept", accept_owner_reservation_path(reservation), class: "btn btn-success", data: {confirm: "Accept #{reservation.user.first_name.capitalize}'s booking request?"} %>
                    <%= link_to "Decline", decline_owner_reservation_path(reservation), class: "btn btn-danger", data: {confirm: "Decline #{reservation.user.first_name.capitalize}'s booking request?"} %>

                    <% else %>
                    <%= reservation.status %>
                    <% end %>
                </div>
                <h2 class="card-trip-pricing">â‚¬
                    <%= reservation.total_price %>
                </h2>
                <%= cl_image_tag reservation.user.avatar.key, crop: :fill, class: "card-trip-user avatar-bordered" %>
            </div>
 
        </div>
        <% end %>
    </div>
    <%= link_to 'Find a pool', swimming_pools_path, class: "btn btn-flat-blue" %>
    <%= link_to 'Add a swimming pool', new_swimming_pool_path, class: "btn btn-flat-green" %>
</div>
